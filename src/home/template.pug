div(ng-controller="homeController as page")
  div.jumbotron.jumbotron-fluid
    .container
      h1.display-3 MyStudyPlan
      p.lead Stop wasting time re-doing your Study Plan.
      p.lead Use our automated system to tell whether or not you're set to graduate.
      button.btn.btn-primary(data-toggle="modal" data-target="#login") Login
  .modal.fade(id="login" tabindex="-1" role="dialog")
    .modal-dialog(role="document")
      .modal-content
        .modal-header
          h5.modal-title Login
          button.close(type="button" data-dismiss="modal" aria-label="Close")
            span(aria-hidden="true") &times;
        .modal-body
          form(ng-submit="page.login()")
            .form-group
              label.form-control-label.form-control-danger(for="username") MyStevens Username
              input#username.form-control(type="text" ng-model="page.username" ng-class="{'is-invalid': page.missingUsername}")
              div(ng-if="page.missingUsername").invalid-feedback Please provide a username.
            .form-group
              label.form-control-label.form-control-danger(for="password") Password
              input#password.form-control(type="password" ng-model="page.password" ng-class="{'is-invalid': page.missingPassword}")
              div(ng-if="page.missingPassword").invalid-feedback Please provide a password.
            .form-group
              button.btn.btn-primary(type="submit") Login
